source "https://rubygems.org"

# Usamos la gema de GitHub Pages para asegurar compatibilidad total
gem "github-pages", group: :jekyll_plugins

# Tema y plugins requeridos por Minimal Mistakes
group :jekyll_plugins do
  gem "jekyll-include-cache"
  gem "jekyll-paginate"
  gem "jekyll-sitemap"
  gem "jekyll-gist"
  gem "jekyll-feed"
  gem "jemoji"
end